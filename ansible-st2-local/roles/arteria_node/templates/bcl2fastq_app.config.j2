# Configuration file for bcl2fastq
---

bcl2fastq:
  versions:
    2.17.1:
      binary: /usr/local/bin/bcl2fastq
      class_creation_function:  _get_bcl2fastq2x_runner
    2.15.2:
      binary: /path/to/bcl2fastq
      class_creation_function:  _get_bcl2fastq2x_runner
    1.8.4:
      binary: /path/to/bcl2fastq
      class_creation_function: _get_bcl2fastq1x_runner

machine_type:
  HiSeq X:
    bcl2fastq_version: 2.17.1
  HiSeq 2500:
    bcl2fastq_version: 2.17.1
  HiSeq 2000:
    bcl2fastq_version: 2.17.1
  NextSeq 500:
    bcl2fastq_version: 2.17.1
  HiSeq 4000:
    bcl2fastq_version: 2.17.1
  MiSeq:
    bcl2fastq_version: 2.17.1


runfolder_path: {{ runfolder_path }}
default_output_path: /data/scratch

bcl2fastq_logs_path: {{ bcl2fastq_logs_path }}